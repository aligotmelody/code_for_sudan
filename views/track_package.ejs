<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trood - Track Your Package</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous" />
    <link
    href="trood-ico.ico"
    rel="shortcut icon"
    type="image/x-icon"
  />
    <link href="./client_style.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
    <script type="text/javascript">
      WebFont.load({
        google: {
          families: [
            "Questrial:regular",
            "DM Sans:regular,700",
            "DM Serif Display:regular",
          ],
        },
      });
    </script>
    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    
</head>
<body>
    <div class="container">
        <!-- =============== Navigation ================ -->
        <div class="navigation">
            <ul>
                <li>
                    <a href="/">
                        <span class="icon">
                            <ion-icon name="rocket-outline"></ion-icon>
                        </span>
                        <span class="title">Trood</span>
                    </a>
                </li>
                <li>
                    <a href="/my-packages">
                        <span class="icon">
                            <ion-icon name="cube-outline"></ion-icon>
                        </span>
                        <span class="title">My Packages</span>
                    </a>
                </li>
                <li class="active"> <!-- Active class for Tracking -->
                    <a href="/track-package">
                        <span class="icon">
                            <ion-icon name="locate-outline"></ion-icon>
                        </span>
                        <span class="title">Track Package</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="chatbubble-outline"></ion-icon>
                        </span>
                        <span class="title">Messages</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="document-text-outline"></ion-icon>
                        </span>
                        <span class="title">Invoices</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="settings-outline"></ion-icon>
                        </span>
                        <span class="title">Settings</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
                <div class="search">
                    <label>
                        <input type="text" placeholder="Track another package...">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>
                <div class="user">
                    <img src="https://randomuser.me/api/portraits/women/65.jpg" alt="User">
                </div>
            </div>

            <!-- ======================= Tracking Content ================== -->
            <div class="trackingHeader">
                <div>
                    <h2>Package Tracking</h2>
                    <div class="packageId">ID: PKG-789456123</div>
                </div>
                <div class="estimatedTime">
                    <ion-icon name="time-outline"></ion-icon>
                    <span>Estimated Delivery: Tomorrow, 10:00 AM</span>
                </div>
            </div>

            <div class="trackingDetails">
                <!-- Left Column: Progress Timeline and Map -->
                <div class="leftColumn">
                    <!-- Progress Timeline -->
                    <div class="progressTimeline">
                        <div class="progressHeader">
                            <h3>Delivery Progress</h3>
                        </div>
                        <div class="timeline">
                            <div class="timelineItem completed">
                                <div class="timelineContent">
                                    <h4>Package Picked Up</h4>
                                    <p>Sender's address, Khartoum, Soba</p>
                                    <div class="time">April 10, 2024 - 09:15 AM</div>
                                </div>
                            </div>
                            <div class="timelineItem completed">
                                <div class="timelineContent">
                                    <h4>In Transit</h4>
                                    <p>Sorting facility, Khartoum, Soba</p>
                                    <div class="time">April 10, 2024 - 02:30 PM</div>
                                </div>
                            </div>
                            <div class="timelineItem completed">
                                <div class="timelineContent">
                                    <h4>Out for Delivery</h4>
                                    <p>On the way to recipient</p>
                                    <div class="time">April 11, 2024 - 08:45 AM</div>
                                </div>
                            </div>
                            <div class="timelineItem active">
                                <div class="timelineContent">
                                    <h4>Near Delivery Location</h4>
                                    <p>Currently in the delivery area</p>
                                    <div class="time">Just now</div>
                                </div>
                            </div>
                            <div class="timelineItem">
                                <div class="timelineContent">
                                    <h4>Delivered</h4>
                                    <p>Recipient's Khartoum, OM Dor</p>
                                    <div class="time">Estimated: Tomorrow, 10:00 AM</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Map Section -->
                    <div class="mapSection">
                        <div class="mapPlaceholder">
                            <div class="pin"></div>
                            <!-- Illustrative map background is in CSS ::before -->
                        </div>
                        <div class="mapInfo">
                            <ion-icon name="location-outline"></ion-icon>
                            <span>Current Location: Khartoum, Soba (Approximate)</span>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Carrier Details -->
                <div class="carrierDetails">
                    <div class="carrierHeader">
                        <div class="carrierImgBx">
                            <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Carrier">
                        </div>
                        <div class="carrierName">
                            <h3>Michael Johnson</h3>
                            <p>Carrier ID: CRR-001</p>
                        </div>
                    </div>

                    <div class="carrierRating">
                        <div class="stars">
                            <ion-icon name="star"></ion-icon>
                            <ion-icon name="star"></ion-icon>
                            <ion-icon name="star"></ion-icon>
                            <ion-icon name="star"></ion-icon>
                            <ion-icon name="star-half-outline"></ion-icon>
                        </div>
                        <div class="ratingValue">4.7 (128 Reviews)</div>
                    </div>

                    <div class="carrierStats">
                        <div class="statCard">
                            <div class="statValue">5+</div>
                            <div class="statLabel">Years Exp.</div>
                        </div>
                        <div class="statCard">
                            <div class="statValue">12</div>
                            <div class="statLabel">Today's Loads</div>
                        </div>
                    </div>

                    <button class="contactBtn">
                        <ion-icon name="chatbubble-ellipses-outline"></ion-icon>
                        Contact Carrier
                    </button>
                </div>
            </div>

        </div>
    </div>
    <!-- =========== Scripts =========  -->
    <script>
        // Toggle navigation for mobile
        document.querySelector('.toggle').addEventListener('click', function() {
            document.querySelector('.navigation').classList.toggle('active');
        });
        // Add active class to navigation items (optional, can be handled server-side)
        const navItems = document.querySelectorAll('.navigation ul li');
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                navItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>